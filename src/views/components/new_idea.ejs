<div class="text-center mb-4">
  <h1 class="h3 mb-3 font-weight-normal">Submit New Idea ğŸ’¡</h1>
</div>

<form id="new_idea" class="form-signin" action="/submit_idea" method="POST">
  <div class="form-label-group">
    <textarea name="idea" class="form-control" rows="8" cols="80"></textarea>
  </div>
  <div class="form-label-group">
    <input type="text" class="form-control" name="category" placeholder="Category" list="category_list" id="category"/>
  </div>
  <datalist id="category_list">
    <% categories.forEach((category) => {%>
      <option value=<%= category.category %>>
    <% }) %>
  </datalist>

  <button type="submit" id="new_idea_btn" class="btn btn-lg btn-success btn-block">Submit Idea</button>
</form>
