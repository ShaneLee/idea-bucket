<table class="table table-hover">
    <thead>
      <tr>
        <th class="hidden">Date</th>
        <th>Category</th>
        <th>Delete</th>
        <th>Idea</th>
      </tr>
    </thead>
    <tbody id="ideas_table">
      <% ideas.forEach((idea) => {%>
      <tr>
        <td class="hidden"><%= idea.time_submitted %></td>
        <td><%= idea.category %></td>
        <td>
        <form method="POST" action="/delete/<%= idea.ideas_id %>">
          <button>
            DELETE
          </button>
        </form>
        </td>
        <td><%= idea.idea %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
